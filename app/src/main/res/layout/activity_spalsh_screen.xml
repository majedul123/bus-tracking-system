<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aaa"
    tools:context="com.simcoder.mbstu.SpalshScreen"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#19e4da"
        android:textSize="40dp"
        android:fontFamily="@string/bottom_sheet_behavior"
        android:text="Welcome to MBSTU Bus Tracking System"
        android:layout_marginBottom="100dp"
        />

    <ProgressBar
        android:progressBackgroundTint="#f9f9f9"
        android:progressTint="#02b3b9"
        android:layout_margin="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/progressBarId"
        style="@android:style/Widget.ProgressBar.Horizontal"

        />

</LinearLayout>

